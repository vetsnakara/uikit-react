{
    "compilerOptions": {
        "module": "ESNext",
        "allowJs": true,
        "outDir": "./lib/types/",
        "declaration": true,
        "emitDeclarationOnly": true,
        "lib": ["dom", "ESNext"],
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node"
    },
    "include": ["src/**/*.js", "src/**/*.jsx"],
    "exclude": ["src/components/**/*.stories.jsx"]
}
